<%- include('layout/header') %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-primary">
          <h3 class="text-light">Edit User (<%= user.name %>)</h3>
        </div>
        <div class="card-body p-4">
          <form
            action="/update/<%= user.id %>"
            method="post"
            id="add-form"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                placeholder="Masukan nama!"
                required
                value="<%= user.name %>"
              />
            </div>

            <div class="mb-3">
              <label for="email">Email</label>
              <input
                type="email"
                class="form-control"
                name="email"
                placeholder="Masukan Gmail!"
                required
                value="<%= user.email %>"
              />
            </div>

            <div class="mb-3">
              <label for="phone">Phone</label>
              <input
                type="tel"
                class="form-control"
                name="phone"
                placeholder="Masukan nomor whatsapp!"
                required
                value="<%= user.phone %>"
              />
            </div>

            <div class="mb-3">
              <label for="image">Select Image</label>
              <input type="file" class="form-control" name="image" />
              <img
                src="/<%= user.image %>"
                alt=""
                width="100px"
                class="img-thumbnail mt-1"
              />
              <input type="hiddena" name="old_image" value="<%= user.image%>" />
            </div>

            <div class="mb-3 d-grid">
              <input
                type="submit"
                name="submit"
                value="Update User"
                class="btn btn-primary btn-lg"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('layout/footer') %>
